{
    "name": "coderio",
    "version": "0.1.0",
    "description": "A modern CLI development tool built with TypeScript",
    "type": "module",
    "bin": {
        "coderio": "./dist/index.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "pnpm run check && tsup",
        "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "cli",
        "tool",
        "typescript",
        "development"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "commander": "^12.1.0",
        "chalk": "^5.4.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "typescript": "^5.7.2",
        "tsup": "^8.3.5",
        "eslint": "^9.17.0",
        "typescript-eslint": "^8.18.1",
        "prettier": "^3.4.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
